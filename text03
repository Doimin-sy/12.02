#include <stdio.h>
int main(int argc, char const *argv[])
{
    // 조건문 , 반복문
    // if(논리값){논리값이 참일때 수행할 로직}
    int money = 1000;
    if(money>=100) {
        printf("%s\n","참입니다.");
        

    }
    else {
        printf("%s\n", "거짓입니다.");

    }
    printf("%s\n","hi plz");
    if(money>1000) {
        printf("%s\n","머니가 천원이상입니다.");
        
    }
    else if(money>500) {
        printf("%s\n","머니가 천원이하 오백원 이상입니다.");
    }
    else if(money>300) {
        printf("%s\n","머니가 오백원이하 삼백원 이상입니다.");
    }
    else {
        printf("%s\n"," 삼백원미만입니다.");
    }

    

    return 0;
}
